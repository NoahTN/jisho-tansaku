{
  "manifest_version": 2,
  "name": "Jisho Tansaku",
  "version": "0.1",
  "description": "Search Jisho",
  "permissions": [
    "contextMenus",
    "https://jisho.org/*",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": ["static/js/background.js"]
  },
  "content_scripts": [{
    "js": [ "static/js/content.js" ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "192": "logo192.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  }
}
