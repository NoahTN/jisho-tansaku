{
  "manifest_version": 3,
  "name": "Jisho Tansaku",
  "background": {
    "service_worker": "background.js"
  },
  "description": "Unofficial Chrome extension for conveniently searching through Japanese dictionary site Jisho.org, right on the page.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "author": "NoahTN",
  "action": {
    "default_title": "Jisho Tansaku",
    "default_icon": {
      "16": "/images/logo16.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "host_permissions": [
    "https://jisho.org/api/*"
  ]
}
